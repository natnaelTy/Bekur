generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id              String            @id @default(cuid())
  email           String?           @unique
  fullName        String?
  phoneNumber     String?           @unique
  emailVerified   Boolean?          @default(false)
  accounts        Account[]
  sessions        Session[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  image           String?           @db.Text
  userApplication UserApplication[]

  @@map("User")
}

model Account {
  id            String   @id @default(cuid())
  userId        String
  accountId     String   @map("providerAccountId")
  providerId    String
  provider      String?
  type          String?
  access_token  String?
  refresh_token String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?
  password      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?

  @@unique([providerId, accountId])
  @@map("account")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique @map("sessionToken")
  expiresAt DateTime @map("expires")
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Verification {
  id         String   @id
  identifier String   @db.Text
  value      String   @db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model UserApplication {
  id            String   @id @default(cuid())

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  fullName      String?
  phoneNumber   String?
  email         String?
  dateOfBirth   DateTime?
  country_applying_to String?
  purpose       String?
  program       String?
  university    String?
  level         String?
  hasPassport   Boolean  @default(false)

  passportImg   String? @db.Text
  transcriptImg String? @db.Text

  progress      Int      @default(0) // 0â€“100 form completion

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  scholarshipApplications ScholarshipApplication[]

  @@map("user_application")
}

model Scholarship {
  id                 String   @id @default(uuid())
  title              String
  provider           String
  country             String?
  eligible_countries String[]
  level              String[]
  fields_of_study    String[]
  benefits           String[]
  required_documents String[]
  deadline           String?
  application_url    String
  description        String

  createdAt DateTime @default(now())

  applications ScholarshipApplication[]
}

model ScholarshipApplication {
  id              String   @id @default(uuid())

  userApplicationId String
  scholarshipId     String

  status           ScholarshipApplicationStatus @default(DRAFT)

  score            Int?    // matching score %
  adminNotes       String?
  externalRef      String? // official portal application ID
  appliedAt        DateTime?

  reviewer         String?

  userApplication  UserApplication @relation(fields: [userApplicationId], references: [id], onDelete: Cascade)
  scholarship      Scholarship     @relation(fields: [scholarshipId], references: [id], onDelete: Cascade)

  payments         Payment[]
  interviews       Interview[]
  motivationLetter MotivationLetter[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userApplicationId, scholarshipId])
  @@map("scholarship_application")
}

enum ScholarshipApplicationStatus {
  DRAFT       
  IN_PROGRESS 
  SUBMITTED   
  INTERVIEW
  OFFERED
  REJECTED
  ACCEPTED
  APPROVED
}

model MotivationLetter {
  id             String   @id @default(cuid())

  scholarshipApplicationId  String
  scholarshipApplication    ScholarshipApplication @relation(fields: [scholarshipApplicationId], references: [id], onDelete: Cascade)

  content        String   @db.Text
  aiGenerated    Boolean  @default(true)

  approved       Boolean  @default(false)
  approvedBy     String?  // admin id/email
  approvedAt     DateTime?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}


model Payment {
  id              String   @id @default(cuid())

  scholarshipApplicationId String
  application               ScholarshipApplication @relation(fields: [scholarshipApplicationId], references: [id], onDelete: Cascade)

  amount          Float
  currency        String   @default("ETB")
  provider        String?
  transactionId   String?  @unique
  status          PaymentStatus @default(PENDING)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("payment")
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Interview {
  id              String   @id @default(cuid())

  scholarshipApplicationId String
  application               ScholarshipApplication @relation(fields: [scholarshipApplicationId], references: [id], onDelete: Cascade)

  scheduledAt     DateTime
  interviewer     String?
  location        String?
  status          InterviewStatus @default(SCHEDULED)
  notes           String? @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("interview")
}

enum InterviewStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW
}
